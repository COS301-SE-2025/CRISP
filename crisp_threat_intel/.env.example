# CRISP Threat Intelligence Platform Configuration
# Copy this file to .env and update with your actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-very-long-secret-key-here-change-in-production-at-least-50-characters-long

# Database Configuration
DB_NAME=crisp
DB_USER=admin
DB_PASSWORD=AdminPassword
DB_HOST=localhost
DB_PORT=5432

# OTX Configuration (Get your key from https://otx.alienvault.com/)
OTX_API_KEY=your-otx-api-key-here
OTX_ENABLED=True
OTX_FETCH_INTERVAL=3600
OTX_BATCH_SIZE=50
OTX_MAX_AGE_DAYS=30

# TAXII Settings
TAXII_SERVER_TITLE=CRISP Threat Intelligence Platform
TAXII_SERVER_DESCRIPTION=Educational threat intelligence sharing platform
TAXII_CONTACT_EMAIL=admin@example.com

# Security Settings (Production)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-domain.com
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=True

# Redis Configuration (optional, for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (optional, for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=CRISP Platform <your-email@gmail.com>