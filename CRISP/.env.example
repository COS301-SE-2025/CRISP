# CRISP Unified System Environment Configuration

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=crisp_unified
DB_USER=crisp_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=CRISP System <your-email@gmail.com>

# Alternative SMTP2Go Configuration
# EMAIL_BACKEND=core.services.email_service.SMTP2GoBackend
# SMTP2GO_API_KEY=your-smtp2go-api-key

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# TAXII Configuration
TAXII_ROOT_URL=http://localhost:8000/taxii2/
TAXII_DISCOVERY_PATH=/taxii2/
TAXII_API_ROOT_PATH=/taxii2/api_roots/

# Trust Management
DEFAULT_TRUST_LEVEL=standard
ENABLE_BILATERAL_TRUST=True
ENABLE_COMMUNITY_TRUST=True

# Threat Intelligence
ENABLE_OTX_FEEDS=True
ENABLE_MITRE_MAPPING=True
DEFAULT_ANONYMIZATION_LEVEL=moderate

# Logging
LOG_LEVEL=INFO
LOG_FILE=crisp_unified.log

# Development Settings (set to False in production)
DEVELOPMENT_MODE=False
TEST_EMAIL=test@example.com