# CRISP Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit secrets to version control

# Database Configuration
DB_NAME=crisp
DB_USER=admin
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Django Settings
SECRET_KEY=your-secret-key-here-make-it-long-and-random
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Security Settings (for production)
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=False
CORS_ALLOWED_ORIGINS=http://localhost:3000

# External Services
OTX_API_KEY=your_otx_api_key_here
OTX_ENABLED=True
OTX_FETCH_INTERVAL=3600
OTX_BATCH_SIZE=50
OTX_MAX_AGE_DAYS=30

# TAXII Server
TAXII_SERVER_TITLE=CRISP Threat Intelligence Platform
TAXII_SERVER_DESCRIPTION=Educational threat intelligence sharing platform
TAXII_CONTACT_EMAIL=admin@example.com

# Redis/Celery (for production)
REDIS_URL=redis://localhost:6379/0

# Additional Security (optional)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Admin User Configuration
ADMIN_PASSWORD=your_secure_admin_password_here