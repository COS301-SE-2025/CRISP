# CRISP User Management - Local Development Environment Configuration

# Development Mode
DEBUG=True
SECRET_KEY=crisp-local-development-secret-key-change-in-production

# Local Database Configuration (PostgreSQL)
DB_NAME=crisp
DB_USER=postgres
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# Pi Database Configuration (COMMENTED OUT - UNCOMMENT WHEN PI IS BACK ONLINE)
# DB_HOST=100.117.251.119  # Uncomment when Pi is back online
# DB_USER=admin
# DB_PASSWORD=AdminPassword

# JWT Configuration
JWT_SECRET_KEY=crisp-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
# ALLOWED_HOSTS=localhost,127.0.0.1,100.117.251.119  # Uncomment for Pi

# Rate Limiting
RATELIMIT_ENABLE=True
LOGIN_ATTEMPTS_LIMIT=5
PASSWORD_RESET_LIMIT=3

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARNING

# Other settings
OTX_API_KEY=your-otx-api-key-if-available
TIMEZONE=UTC