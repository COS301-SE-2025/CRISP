# =============================================================================
# CRISP Trust Management System - Environment Variables Template
# =============================================================================
# Copy this file to .env and configure with your actual values

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
DJANGO_SECRET_KEY=your-django-secret-key-here
TRUST_MANAGEMENT_SECRET_KEY=your-trust-secret-key-here
OTX_API_KEY=your-otx-api-key-here
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
USE_SQLITE=false
DB_NAME=crisp
DB_USER=crisp_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgres://crisp_user:your-database-password@localhost:5432/crisp

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
TIME_ZONE=UTC

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
CRISP_SENDER_EMAIL=your-email@gmail.com
CRISP_SENDER_NAME=CRISP Platform
DEFAULT_ADMIN_EMAIL=your-email@gmail.com
TEST_EMAIL=your-email@gmail.com

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175

# =============================================================================
# EXTERNAL API SETTINGS
# =============================================================================
OTX_ENABLED=true
OTX_FETCH_INTERVAL=3600
OTX_BATCH_SIZE=100
OTX_MAX_AGE_DAYS=30

VIRUSTOTAL_ENABLED=false
VIRUSTOTAL_RATE_LIMIT_DELAY=15
VIRUSTOTAL_MAX_FILE_SIZE=650000000

# =============================================================================
# REDIS CONFIGURATION (For Celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0