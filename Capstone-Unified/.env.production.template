# =============================================================================
# CRISP Trust Management System - PRODUCTION Environment Variables Template
# =============================================================================
# Copy this file to .env.production and configure with your production values

# =============================================================================
# SECURITY & AUTHENTICATION - PRODUCTION SECRETS
# =============================================================================
DJANGO_SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_SECRET_KEY_IN_PRODUCTION
TRUST_MANAGEMENT_SECRET_KEY=REPLACE_WITH_SECURE_TRUST_SECRET_KEY_IN_PRODUCTION
OTX_API_KEY=your-production-otx-api-key
VIRUSTOTAL_API_KEY=your-production-virustotal-api-key

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL) - PRODUCTION
# =============================================================================
USE_SQLITE=false
DB_NAME=crisp
DB_USER=postgres
DB_PASSWORD=your-secure-production-database-password
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:your-secure-production-database-password@db:5432/crisp

# =============================================================================
# APPLICATION SETTINGS - PRODUCTION
# =============================================================================
DEBUG=false
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-server-ip,localhost,127.0.0.1
TIME_ZONE=UTC

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# EMAIL CONFIGURATION - PRODUCTION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_HOST_USER=your-production-email@domain.com
EMAIL_HOST_PASSWORD=your-production-email-password
CRISP_SENDER_EMAIL=your-production-email@domain.com
CRISP_SENDER_NAME=CRISP Platform
DEFAULT_ADMIN_EMAIL=admin@your-domain.com
TEST_EMAIL=test@your-domain.com

# =============================================================================
# CORS CONFIGURATION - PRODUCTION
# =============================================================================
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://your-domain.com,http://www.your-domain.com

# =============================================================================
# EXTERNAL API SETTINGS
# =============================================================================
OTX_ENABLED=true
OTX_FETCH_INTERVAL=3600
OTX_BATCH_SIZE=100
OTX_MAX_AGE_DAYS=30

VIRUSTOTAL_ENABLED=false
VIRUSTOTAL_RATE_LIMIT_DELAY=15
VIRUSTOTAL_MAX_FILE_SIZE=650000000

# =============================================================================
# REDIS CONFIGURATION (For Celery)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_BASE_URL=https://your-domain.com