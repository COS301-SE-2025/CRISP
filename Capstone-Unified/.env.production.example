# =============================================================================
# CRISP Production Environment Variables - EXAMPLE FILE
# =============================================================================
# IMPORTANT: Copy this file to .env.production and fill in real values
# DO NOT commit .env.production to git - it contains sensitive secrets!
# =============================================================================

# =============================================================================
# SECURITY & AUTHENTICATION (REQUIRED - Generate secure values!)
# =============================================================================
# Generate strong Django secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here-use-random-50+-character-string

# Strong database password (use a password manager to generate)
POSTGRES_PASSWORD=your-strong-database-password-here

# =============================================================================
# DOMAIN & NETWORKING (Update with your domain)
# =============================================================================
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# API KEYS (Optional - Get from respective services)
# =============================================================================
# AlienVault OTX API Key: https://otx.alienvault.com/api
OTX_API_KEY=

# VirusTotal API Key: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=

# =============================================================================
# EMAIL CONFIGURATION (Optional - For production email notifications)
# =============================================================================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password
CRISP_SENDER_EMAIL=noreply@yourdomain.com

# =============================================================================
# ADDITIONAL PRODUCTION SETTINGS
# =============================================================================
DEBUG=False
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true
