# =============================================================================
# CRISP Development Environment Variables - EXAMPLE FILE
# =============================================================================
# IMPORTANT: Copy this file to .env and customize for local development
# Safe to use default values for local development
# =============================================================================

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
DJANGO_SECRET_KEY=django-insecure-dev-key-change-for-production
TRUST_MANAGEMENT_SECRET_KEY=trust-secret-key-for-development
OTX_API_KEY=your-otx-api-key-here-optional
VIRUSTOTAL_API_KEY=your-virustotal-api-key-optional

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
USE_SQLITE=false
DB_NAME=crisp
DB_USER=crisp_user
DB_PASSWORD=crisp_password_change_me
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgres://crisp_user:crisp_password_change_me@localhost:5432/crisp

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1
TIME_ZONE=UTC

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# EMAIL CONFIGURATION (Development - Console backend)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
CRISP_SENDER_EMAIL=noreply@localhost
CRISP_SENDER_NAME=CRISP Platform
DEFAULT_ADMIN_EMAIL=admin@localhost
TEST_EMAIL=test@localhost

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175

# =============================================================================
# EXTERNAL API SETTINGS
# =============================================================================
OTX_ENABLED=true
OTX_FETCH_INTERVAL=3600
OTX_BATCH_SIZE=100
OTX_MAX_AGE_DAYS=30

VIRUSTOTAL_ENABLED=true
VIRUSTOTAL_RATE_LIMIT_DELAY=15
VIRUSTOTAL_MAX_FILE_SIZE=650000000

# =============================================================================
# TAXII CONFIGURATION
# =============================================================================
TAXII_SERVER_TITLE=CRISP Threat Intelligence Platform
TAXII_SERVER_DESCRIPTION=Educational threat intelligence sharing platform
TAXII_CONTACT_EMAIL=contact@localhost
TAXII_FILTER_DAYS=1

# =============================================================================
# SECURITY & USER MANAGEMENT
# =============================================================================
SESSION_COOKIE_AGE_SECONDS=3600
REQUIRE_EMAIL_VERIFICATION=false
PASSWORD_RESET_TIMEOUT_DAYS=1
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
ENABLE_TWO_FACTOR_AUTH=false
REQUIRE_STRONG_PASSWORDS=true
PASSWORD_HISTORY_COUNT=5
TRUSTED_DEVICE_EXPIRY_DAYS=30

# =============================================================================
# TRUST SYSTEM CONFIGURATION
# =============================================================================
DEFAULT_TRUST_LEVEL=restricted
AUTO_APPROVE_TRUST_RELATIONSHIPS=false
TRUST_RELATIONSHIP_EXPIRY_DAYS=365
MAX_TRUST_GROUPS_PER_ORG=10
ENABLE_TRUST_INHERITANCE=true

# =============================================================================
# AUDIT & SECURITY
# =============================================================================
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_RATE_LIMITING=true
ENABLE_IP_WHITELISTING=false
ALLOWED_IP_RANGES=
ENABLE_GEOLOCATION_BLOCKING=false
BLOCKED_COUNTRIES=

# =============================================================================
# API & UPLOAD LIMITS
# =============================================================================
ENABLE_API_VERSIONING=true
DEFAULT_API_VERSION=v1
MAX_UPLOAD_SIZE_MB=50
ENABLE_BULK_OPERATIONS=true
MAX_BULK_OPERATION_SIZE=100
FILE_UPLOAD_MAX_MEMORY_SIZE_MB=2.5

# =============================================================================
# ORGANIZATION SETTINGS
# =============================================================================
REQUIRE_DOMAIN_VERIFICATION=false
AUTO_CREATE_PUBLISHER_ROLE=true
MAX_USERS_PER_ORG=1000
ENABLE_ORG_INVITATIONS=true
INVITATION_EXPIRY_DAYS=7

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
ENABLE_QUERY_OPTIMIZATION=true
ENABLE_CACHING=true
CACHE_TIMEOUT_SECONDS=300
ENABLE_METRICS_COLLECTION=true
METRICS_RETENTION_DAYS=30

# =============================================================================
# REDIS CONFIGURATION (For Celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
