[run]
source = core, crisp
omit = 
    */migrations/*
    */venv/*
    */env/*
    */tests/*
    */test_*
    */legacy_tests/*
    manage.py
    */settings/*
    */wsgi.py
    */asgi.py
    */__pycache__/*
    */node_modules/*
    */staticfiles/*
    */media/*
    */logs/*
    crisp/tools/*
    crisp/scripts/*
    crisp/config/*
    crisp/reset_database.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    class .*\(Protocol\):
    @(abc\.)?abstractmethod

[html]
directory = htmlcov